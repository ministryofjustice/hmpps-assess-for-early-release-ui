{% from "govuk/components/table/macro.njk" import govukTable %}
{% macro contactDetail(contact) %}
        <div class="govuk-summary-list__value">
            {% if contact.fullName %}
                {{ contact.fullName }}
                <br/>
                {{  contact.email }}
                <br/>
                {{ contact.locationName }}
            {% else %}
                {% switch contact.userRole %}
                {% case 'PROBATION_COM' %}
                    No probation practitioner has worked on this application yet
                {% case 'PRISON_DM' %}
                    No decision maker has worked on this application yet
                {% case 'PRISON_CA' %}
                    No case administrator has worked on this application yet
                {% default %}
                {% endswitch %}
            {% endif %}
        </div>
{% endmacro %}
