{% macro offenderNameAndLink(offender, index) %}
    <a id="name-button-{{ index }}" href="{{ paths.support.offender.supportOffenderView | toPath({ prisonNumber: offender.prisonNumber})}}" class="govuk-link govuk-link--no-visited-state">{{ offender.name }}</a>
    <br>
    <div class="govuk-hint govuk-!-font-size-16">
        Prison number: {{ offender.prisonNumber }}
    </div>
{% endmacro %}