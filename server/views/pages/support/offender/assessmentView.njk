{% extends "layout.njk" %}
{% from "./macro/auditDetails.njk" import auditDetails %}
{% from "./macro/staffDetails.njk" import staffDetails %}

{% from "./macro/assessmentDetails.njk" import assessmentDetails %}

{% set pageTitle = "Assesment view - " + applicationName %}


{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">Assessment for Prison Number: {{ prisonNumber  }}</h1>
        </div>
        <div class="govuk-grid-column-full">
            {{ assessmentDetails(assessment) }}
        </div>
        {%- if assessment.responsibleCom %}
            <div class="govuk-grid-column-one-half">
                {{ staffDetails(assessment.responsibleCom) }}
            </div>
        {%- endif %}
        <div class="govuk-grid-column-one-half">
                {{ auditDetails(assessment) }}
        </div>
    </div>
{% endblock %}
