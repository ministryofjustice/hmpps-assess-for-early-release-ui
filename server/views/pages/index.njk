{% extends "layout.njk" %}
{% from "partials/card.njk" import card %}

{% set bodyAttributes = { "data-page": "home" } %}
{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
    <div class="grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">Assess For Early Release</h1>
            <div class="govuk-grid-row card-group">

                {% if shouldShowSupportCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "supportCard",
                            "href": "/support",
                            "clickable": "true",
                            "heading": "Support",
                            "description": "View details about an offender or staff member to help with support."
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowCaAssessForHDCCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "caAssessForHDCCard",
                            "href": '/prison/caseload',
                            "clickable": "true",
                            "heading": "Home detention curfew (HDC - CA)",
                            "description": "View assessment and assess offender."
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowComAssessForHDCCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "comAssessForHDCCard",
                            "href": '/probation/caseload',
                            "clickable": "true",
                            "heading": "Home detention curfew (HDC - COM)",
                            "description": "View assessment and assess offender."
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowDmAssessForHDCCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "dmAssessForHDCCard",
                            "href": '/decisionMaker/caseload',
                            "clickable": "true",
                            "heading": "Home detention curfew (HDC - DM)",
                            "description": "View assessment and assess offender."
                        }) }}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
